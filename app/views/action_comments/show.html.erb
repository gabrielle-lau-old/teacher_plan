<div class="page-header">
  <h3>Action Comment #<%= @action_comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @action_comment.user_id %></dd>

      <dt>Action step</dt>
      <dd><%= @action_comment.action_step_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/action_comments" class="btn btn-primary">
        Back
      </a>
      <a href="/action_comments/<%= @action_comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_action_comment/<%= @action_comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
