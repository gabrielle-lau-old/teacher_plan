<div class="page-header">
  <h3>Collaboration #<%= @collaboration.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @collaboration.user.present? %>
          <a href="/users/<%= @collaboration.user_id %>">
            <%= @collaboration.user.first_name %>
          </a>
        <% end %>
      </dd>

      <dt>Improvement plan</dt>
      <dd>
        <% if @collaboration.improvement.present? %>
          <a href="/improvement_plans/<%= @collaboration.improvement_plan_id %>">
            <%= @collaboration.improvement.state %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/collaborations" class="btn btn-primary">
        Back
      </a>
      <a href="/collaborations/<%= @collaboration.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_collaboration/<%= @collaboration.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
