<!-- Validation failure messages -->
<% if @action_step.errors.any? %>
  <% @action_step.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Action Step</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_action_step" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @action_step.description %>">
      </div>

      <!-- Label and input for target_date -->
      <div class="form-group">
        <label for="target_date" class="control-label">
          Target date
        </label>

        <input type="text" id="target_date" name="target_date" placeholder="Target date" class="form-control" value="<%= @action_step.target_date %>">
      </div>

      <!-- Label and input for goal_id -->
      <div class="form-group">
        <label for="goal_id" class="control-label">
          Goal
        </label>

        <input type="text" id="goal_id" name="goal_id" placeholder="Goal" class="form-control" value="<%= @action_step.goal_id %>">
      </div>

      <!-- Label and input for lead -->
      <div class="form-group">
        <label for="lead" class="control-label">
          Lead
        </label>

        <textarea id="lead" name="lead" placeholder="Lead" class="form-control" rows="3"><%= @action_step.lead %></textarea>
      </div>

      <!-- Label and input for resources -->
      <div class="form-group">
        <label for="resources" class="control-label">
          Resources
        </label>

        <textarea id="resources" name="resources" placeholder="Resources" class="form-control" rows="3"><%= @action_step.resources %></textarea>
      </div>

      <!-- Label and input for implementation_specifics -->
      <div class="form-group">
        <label for="implementation_specifics" class="control-label">
          Implementation specifics
        </label>

        <input type="text" id="implementation_specifics" name="implementation_specifics" placeholder="Implementation specifics" class="form-control" value="<%= @action_step.implementation_specifics %>">
      </div>

      <!-- Label and input for measures_of_success -->
      <div class="form-group">
        <label for="measures_of_success" class="control-label">
          Measures of success
        </label>

        <input type="text" id="measures_of_success" name="measures_of_success" placeholder="Measures of success" class="form-control" value="<%= @action_step.measures_of_success %>">
      </div>

      <button class="btn btn-success">
        Create Action Step
      </button>
      or
      <a href="/action_steps">Cancel</a>
    </form>
  </div>
</div>
